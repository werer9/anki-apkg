{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "types": ["node"],
    "module": "esnext",
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
